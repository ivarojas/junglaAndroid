<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#334AFF74"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="#EE38C93B"
                android:gravity="center"
                android:text="Fuentes y Agradecimientos"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/authors_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="#554AFF74"
                android:gravity="center"
                android:text="Creadores"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/authors_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#554AFF74"
                android:gravity="center"
                android:text="Informaci칩n de animales"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/info_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/sounds_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#554AFF74"
                android:gravity="center"
                android:text="Sonidos (libre uso, incluso comercial)"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/sounds_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/images_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#554AFF74"
                android:gravity="center"
                android:text="Im치genes"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/images_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/character_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#554AFF74"
                android:gravity="center"
                android:text="Indie (protagonista de aplicaci칩n)"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

	            <ImageView
	                android:id="@+id/imageView1"
	                android:layout_width="50dp"
	                android:layout_height="65dp"
	                android:layout_marginBottom="5dp"
	                android:layout_marginLeft="5dp"
	                android:layout_marginTop="5dp"
	                android:src="@drawable/michellecoffee" />

		            <TextView
		                android:id="@+id/character_content"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="5dp"
		                android:layout_marginTop="5dp"
		                android:textAppearance="?android:attr/textAppearanceSmall"
		                android:textColor="#FFFFFF" />
			</LinearLayout>

            <TextView
                android:id="@+id/dcc_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#554AFF74"
                android:gravity="center"
                android:text="Universidad de Chile"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/logo_dcc" />

                    <TextView
                        android:id="@+id/dcc_logo_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CC4010 Taller de Proyectos de Programaci칩n Android"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/dcc_profe_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="Profesor:\nJeremy Barbay"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/profe" />

                    <TextView
                        android:id="@+id/jeremy_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/dcc_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#554AFF74"
                android:gravity="center"
                android:text="Cursor Lab"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/logo_cursorlab" />
        </LinearLayout>

        <Button
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:text="Cerrar" />
        
        </LinearLayout>
        
</RelativeLayout>

</ScrollView>
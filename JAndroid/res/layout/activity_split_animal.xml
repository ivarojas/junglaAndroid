<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/fondo_selva6" >
	
    <LinearLayout
        android:id="@+id/layoutUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/buttonPrevUp"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight=".20"
            android:background="@drawable/arrow_prev" />

        <ImageSwitcher
            android:id="@+id/imageSwitcherUp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight=".60" >
        </ImageSwitcher>

        <Button
            android:id="@+id/buttonNextUp"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight=".20"
            android:background="@drawable/arrow_next" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutUp"
        android:weightSum="1.0"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/buttonPrevDown"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight=".20"
            android:background="@drawable/arrow_prev" />

        <ImageSwitcher
            android:id="@+id/imageSwitcherDown"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight=".60" >
        </ImageSwitcher>

        <Button
            android:id="@+id/buttonNextDown"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight=".20"
            android:background="@drawable/arrow_next" />

    </LinearLayout>
    
    <ImageButton
        android:id="@+id/nextButton_split"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_next" />
    
    
</RelativeLayout>

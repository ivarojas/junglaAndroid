<?xml version="1.0" encoding="utf-8"?>
<drag_framework.DragLayer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res/com.android.launcher"
    android:id="@+id/drag_layer"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingTop="200dp" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:launcher="http://schemas.android.com/apk/res/com.android.launcher"
            android:id="@+id/layout_animal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <drag_framework.DropSpot
                android:id="@+id/drop_spot1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@color/drop_target_disabled" >
            </drag_framework.DropSpot>

            <ImageView
                android:id="@+id/animal1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/elephant2" />
        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:launcher="http://schemas.android.com/apk/res/com.android.launcher"
            android:id="@+id/layout_animal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <drag_framework.DropSpot
                android:id="@+id/drop_spot2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@color/drop_target_disabled" >
            </drag_framework.DropSpot>

            <ImageView
                android:id="@+id/animal2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/gorilla" />
        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:launcher="http://schemas.android.com/apk/res/com.android.launcher"
            android:id="@+id/layout_animal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <drag_framework.DropSpot
                android:id="@+id/drop_spot3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@color/drop_target_disabled" >
            </drag_framework.DropSpot>

            <ImageView
                android:id="@+id/animal3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/dog" />
        </RelativeLayout>
        
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:launcher="http://schemas.android.com/apk/res/com.android.launcher"
            android:id="@+id/layout_animal4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <drag_framework.DropSpot
                android:id="@+id/drop_spot4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@color/drop_target_disabled" >
            </drag_framework.DropSpot>

            <ImageView
                android:id="@+id/animal4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/cow" />
        </RelativeLayout>
        
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:launcher="http://schemas.android.com/apk/res/com.android.launcher"
            android:id="@+id/layout_animal5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <drag_framework.DropSpot
                android:id="@+id/drop_spot5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@color/drop_target_disabled" >
            </drag_framework.DropSpot>

            <ImageView
                android:id="@+id/animal5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/rabbit" />
        </RelativeLayout>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:launcher="http://schemas.android.com/apk/res/com.android.launcher"
            android:id="@+id/layout_animal6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <drag_framework.DropSpot
                android:id="@+id/drop_spot6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@color/drop_target_disabled" >
            </drag_framework.DropSpot>

            <ImageView
                android:id="@+id/animal6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/hippo" />
        </RelativeLayout>
    </LinearLayout>
	<HorizontalScrollView 
	    android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingRight="60dp"
        android:paddingTop="30dp">
        
        <RelativeLayout 
		    android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
            
	   		<TextView
	   		    android:id="@+id/textView1"
	   		    android:layout_width="180dp"
	   		    android:layout_height="wrap_content"
	   		    android:paddingRight="10dp"
	   		    android:paddingTop="30dp"
	   		    android:text="¿Cuál de estos animales viven en la jungla?"
	   		    android:textAppearance="?android:attr/textAppearanceLarge" />
	   		
		</RelativeLayout>
        
        <RelativeLayout 
		    android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
			<drag_framework.DropSpot
			    android:id="@+id/drop_spot_center"
			    android:layout_width="150dp"
			    android:layout_height="150dp"
			    android:paddingLeft="30dp"
			    android:background="@color/drop_target_enabled" >
			</drag_framework.DropSpot>
		</RelativeLayout>
		<RelativeLayout 
		    android:layout_width="wrap_content"
        	android:layout_height="wrap_content">

			<TextView
			    android:id="@+id/textView2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginRight="30dp"
			    android:paddingLeft="70dp"
			    android:paddingTop="50dp"
			    android:text="0/3"
			    android:textAppearance="?android:attr/textAppearanceLarge" />

		</RelativeLayout>
	</LinearLayout>
	</HorizontalScrollView>
</drag_framework.DragLayer>